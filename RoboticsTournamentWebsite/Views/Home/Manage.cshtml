@model RoboticsTournamentWebsite.Models.TournamentInfo

@{
    ViewData["Title"] = "Manage";
}

<h1>Manage</h1>

<h4>Organize a Tournament</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Manage" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name of Tournament</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Timezone" class="control-label"></label>
                <input asp-for="Timezone" class="form-control" />
                <span asp-validation-for="Timezone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label">Total Number of Participants</label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduledStartDate" class="control-label">Scheduled Start Date</label>
                <input asp-for="ScheduledStartDate" class="form-control" />
                <span asp-validation-for="ScheduledStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

